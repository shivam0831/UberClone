<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar_details" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="2"
                android:text="01 May 2018"
                android:textColor="#323643"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/txttime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="3"
                android:text="06:30 PM"
                android:textColor="#323643"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="500 Rs"
                android:textColor="#323643"
                android:textSize="13.4sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pin_black" />

                <TextView
                    android:id="@+id/txtmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Phoenix Market City, Whitefield Main Road, Mahadevpura, Bengaluru, Karnataka 560048"
                    android:textColor="#323643"
                    android:textSize="13.4sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/i2"
                android:layout_width="2dp"
                android:layout_height="48dp"
                android:layout_marginLeft="26dp"
                android:layerType="software"
                android:src="@drawable/rect_dotted" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/navigatiob_blue" />


                <TextView
                    android:id="@+id/txthome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="16dp"
                    android:text="Unnamed Road, Cheemasandra, Bengaluru, Karnataka 560049"
                    android:textColor="#323643"
                    android:textSize="13.4sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtrated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:text="Distance :"
                android:textColor="#323643"
                android:textSize="13.4sp" />

            <TextView
                android:id="@+id/txtdistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.5"
                android:text="15 KM"
                android:textColor="#323643"
                android:textSize="13.4sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>